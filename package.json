{
  "name": "language-learning-audio-player",
  "version": "0.1.0",
  "description": "语言学习音频播放器",
  "main": "index.js",
  "scripts": {
    "start": "cd web-client && npm run dev",
    "build": "cd web-client && npm run build",
    "dev:frontend": "cd web-client && npm run dev",
    "dev:backend": "cd backend && go run .",
    "wasm:build": "cd RustWebAssembly/audio_processor && wasm-pack build --target web --out-dir ../../web-client/public/wasm",
    "status": "node scripts/update-status.js",
    "status:completed": "node scripts/update-status.js add-completed",
    "status:pending": "node scripts/update-status.js add-pending",
    "status:mark": "node scripts/update-status.js mark-completed",
    "status:log": "node scripts/update-status.js add-log",
    "status:priority": "node scripts/update-status.js set-priority",
    "status:move": "node scripts/update-status.js move-feature",
    "status:progress": "node scripts/update-status.js show-progress"
  },
  "keywords": [
    "language-learning",
    "audio-player",
    "next.js",
    "golang",
    "webassembly"
  ],
  "author": "",
  "license": "MIT"
} 